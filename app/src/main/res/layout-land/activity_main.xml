<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hexagon2"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <EditText style="@style/EditTextTextoBlanco"
                android:id="@+id/etEmailR"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:drawableEnd="@drawable/ic_user"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText style="@style/EditTextTextoBlanco"
                android:id="@+id/etPasswordR"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:drawableEnd="@drawable/ic_lock"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <Button style="@style/BotonTextoBlanco"
                android:id="@+id/btLoginMain"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#FB8C00"
                android:text="@string/login" />


                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="25dp">

                    <TextView
                        android:id="@+id/tvPasswordLostMain"
                        style="@style/EditTextTextoBlanco"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="110dp"
                        android:layout_marginEnd="50dp"
                        android:text="@string/forgot_password"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvRegitroMain"
                        style="@style/EditTextTextoBlanco"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/register_user"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>