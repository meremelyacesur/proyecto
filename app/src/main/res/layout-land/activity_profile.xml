<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hexagon2"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="484dp"
        android:layout_height="282dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fitness_logo" />

    <TextView
        android:id="@+id/etSaludo"
        style="@style/EditTextTextoBlanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/ivLogo"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivLogo"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

    <Button
        android:id="@+id/btCalcularT"
        style="@style/BotonTextoBlanco"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:onClick="gototmb"
        android:text="Calculadora de TMB"
        app:layout_constraintEnd_toEndOf="@+id/btDieta"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btDieta"
        app:layout_constraintTop_toBottomOf="@+id/btDieta" />

    <Button
        android:id="@+id/btGym"
        style="@style/BotonTextoBlanco"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:onClick="gotogym"
        android:text="Registro de entrenamiento"
        app:layout_constraintEnd_toEndOf="@+id/btCalcularT"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btCalcularT"
        app:layout_constraintTop_toBottomOf="@+id/btCalcularT" />

    <Button
        android:id="@+id/btDieta"
        style="@style/BotonTextoBlanco"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:onClick="menudb"
        android:text="Registro Calórico"
        app:layout_constraintStart_toEndOf="@+id/ivLogo"
        app:layout_constraintTop_toTopOf="@+id/ivLogo" />

    <Button
        android:id="@+id/logout"
        style="@style/BotonTextoBlanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="cerrar sesión"
        app:layout_constraintEnd_toEndOf="@+id/btGym"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/btGym"
        app:layout_constraintTop_toBottomOf="@+id/btGym" />

</androidx.constraintlayout.widget.ConstraintLayout>